{
  "labels": [
    "renovate"
  ],
  "automerge": true,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major"
      ],
      "addLabels": [
        "major"
      ],
      "automerge": false
    },
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "addLabels": [
        "minor"
      ]
    },
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "addLabels": [
        "patch"
      ]
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "addLabels": [
        "devDependencies"
      ],
      "excludePackageNames": [
        "typescript"
      ]
    },
    {
      "matchDepTypes": [
        "dependencies"
      ],
      "addLabels": [
        "dependencies"
      ]
    },
    {
      "groupName": "linters",
      "packagePatterns": [
        "^eslint",
        "^@typescript-eslint",
        "prettier"
      ]
    },
    {
      "matchPackageNames": [
        "husky"
      ],
      "automerge": false
    }
  ]
}
